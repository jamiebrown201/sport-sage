# Database Configuration
# Option 1: Direct URL
DATABASE_URL=postgresql://user:password@host:5432/sportsage?sslmode=require

# Option 2: Component-based (alternative to DATABASE_URL)
# DATABASE_HOST=your-aurora-cluster.xxxxx.eu-west-1.rds.amazonaws.com
# DATABASE_PORT=5432
# DATABASE_NAME=sportsage
# DATABASE_USER=sportsage_admin
# DATABASE_PASSWORD=your-password
# DATABASE_SSL=true

# AWS Configuration (for SQS settlement queue)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
SETTLEMENT_QUEUE_URL=https://sqs.eu-west-1.amazonaws.com/123456789012/settlement-queue.fifo

# Proxy Configuration (optional - enable one or more)
# DataImpulse - $1/GB (recommended primary)
DATAIMPULSE_USERNAME=your-username
DATAIMPULSE_PASSWORD=your-password

# PacketStream - $1/GB (backup)
# PACKETSTREAM_API_KEY=your-api-key

# IPRoyal - $1.75/GB (backup)
# IPROYAL_USERNAME=your-username
# IPROYAL_PASSWORD=your-password

# SmartProxy/Decodo - ~$6-8/GB (premium backup)
# SMARTPROXY_USERNAME=your-username
# SMARTPROXY_PASSWORD=your-password

# Bright Data - ~$10-17/GB (premium backup)
# BRIGHTDATA_USERNAME=your-username
# BRIGHTDATA_PASSWORD=your-password
# BRIGHTDATA_ZONE=residential

# Proxy country (default: gb)
PROXY_COUNTRY=gb

# Service Configuration
PORT=3001
NODE_ENV=production
LOG_LEVEL=info
